{
    "manifest_version": 3,
    "name": "TubeArchivist Companion",
    "description": "Interact with your selfhosted TA server.",
    "version": "0.4.0",
    "icons": {
        "48": "/images/icon.png",
        "128": "/images/icon128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/*"],
            "js": ["script.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}
